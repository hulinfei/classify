<div class="panel panel-default">
  <div class="panel-heading">
      文章列表
    <div class="pull-right">
      <%= link_to "新建", new_article_path, class: "btn btn-primary btn-xs" %>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table table-striped b-t b-light">
      <thead>
        <tr>
          <th>标题</th>
          <th>所属分类</th>
          <th>描述</th>
          <th>电话</th>
          <th>阅读次数</th>
          <th>状态</th>
          <th style="width:120px;">创建时间</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
       <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><% if not article.category_id.blank? %>
            <%= Category.find_by(id: article.category_id).name %>
            <% end %>
        </td>
        <td><%= article.description %></td>
        <td><%= article.phone %></td>
        <td><%= article.view %></td>
        <td><%= article.status %></td>
        <td><%= article.created_at.strftime("%F %T") %></td>
        <td><%= link_to '查看', article, class: "btn btn-default btn-xs" %>
        <%= link_to '修改', edit_article_path(article), class: "btn btn-default btn-xs" %>
        <%= link_to '删除', article_path(article), method: :delete, class: "btn btn-default btn-xs"  %>
        </td>
      </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <footer class="panel-footer">
    <%= render partial: "shared/admin/paginate", locals: { object: @articles } %>
  </footer>
</div>