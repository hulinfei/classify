<div class="panel panel-default">
<div class="panel-heading font-bold">
  查看分类
</div>
<div class="panel-body">
  <%= simple_form_for(@diymenu, html: { multipart: true, class: "form-horizontal" }) do |f| %>
    <%= f.input :name, label: "分类名", disabled: true %>
    <%= f.input :key, label: "关键字", disabled: true %>
    <%= f.input :url, label: "URL", disabled: true %>
    <%= f.input :is_show, label: "是否显示"%>
  
  <div class="line line-dashed b-b line-lg pull-in"></div>
  <div class="col-sm-10 col-sm-offset-2">
    <%= link_to "返 回", diymenus_path, class: "btn btn-default" %>
  </div>
  <% end %>
</div>
</div>
