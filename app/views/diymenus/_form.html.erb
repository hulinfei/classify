<%= simple_form_for(@diymenu, html: { multipart: true, class: "form-horizontal" }) do |f| %>
  <div class="col-sm-offset-2">
    <%= f.select :parent_id, Diymenu.where(depth: 0).map { |c| [c.name, c.id] }, include_blank: true %>
    <%= f.input :name, label: "名称" %>
    <%= f.input :key, label: "关键字" %>
    <%= f.input :url, label: "URL" %>
    <%= f.input :is_show, as: :boolean, html: true,  label: "显示" %>
  <div class="line line-dashed b-b line-lg pull-in"></div>
  <div class="col-sm-10 col-sm-offset-2">
    <%= f.button :submit, "提 交", class: "btn btn-primary" %>
    <%= link_to "返 回", diymenus_path, class: "btn btn-default" %>
  </div>
<% end %>
