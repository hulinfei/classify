<div class="panel panel-default">
<div class="panel-heading font-bold">
  查看分类
</div>
<div class="panel-body">
  <%= simple_form_for(@category, html: { multipart: true, class: "form-horizontal" }) do |f| %>
    <%= f.input :name, label: "分类名", disabled: true %>
  <div class="line line-dashed b-b line-lg pull-in"></div>
   <% if not @category.icon_url.blank?  %>
          <%= image_tag @category.icon_url('40'), class: "img-thumbnail" %>
    <% end %>
  <div class="line line-dashed b-b line-lg pull-in"></div>
  <div class="col-sm-10 col-sm-offset-2">
    <%= link_to "返 回", categories_path, class: "btn btn-default" %>
  </div>
  <% end %>
</div>
</div>
