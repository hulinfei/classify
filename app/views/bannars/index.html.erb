<p id="notice"><%= notice %></p>

<h1>Bannars</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bannars.each do |bannar| %>
      <tr>
        <td><%= bannar.title %></td>
        <td><%= bannar.url %></td>
        <td><%= bannar.active %></td>
        <td><%= link_to 'Show', bannar %></td>
        <td><%= link_to 'Edit', edit_bannar_path(bannar) %></td>
        <td><%= link_to 'Destroy', bannar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

