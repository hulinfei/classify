<div class="panel panel-default">
<div class="panel-heading font-bold">
  查看信息类型
</div>
<div class="panel-body">
  <%= simple_form_for(@info_type, html: { multipart: true, class: "form-horizontal" }) do |f| %>
    <%= f.input :name, label: "表头名", disabled: true %>
  <div class="line line-dashed b-b line-lg pull-in"></div>
   <%= f.input :fieldname, label: "字段名", disabled: true %>
  <div class="line line-dashed b-b line-lg pull-in"></div>
   <%= f.input :fieldtype, label: "字段类型", disabled: true %>
  <div class="line line-dashed b-b line-lg pull-in"></div>
   <%= f.input :optype, label: "输出类型", disabled: true %>
  <div class="line line-dashed b-b line-lg pull-in"></div>
   <%= f.input :validation_rule, label: "验证规则", disabled: true %>
  <div class="line line-dashed b-b line-lg pull-in"></div>
   <%= f.input :show, as: :boolean, html: true,  label: "是否显示到表格" %>
  <div class="line line-dashed b-b line-lg pull-in"></div>
  <div class="col-sm-10 col-sm-offset-2">
    <%= link_to "返 回", info_types_path, class: "btn btn-default" %>
  </div>
  <% end %>
</div>
</div>
