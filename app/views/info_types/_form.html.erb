<%= simple_form_for(@info_type, html: { multipart: true, class: "form-horizontal" }) do |f| %>
	<label class="col-sm-2 control-label file optional">所属信息分类</label>
    <div class="col-sm-offset-2">
    <%= f.select :info_class_id, InfoClass.all.map { |c| [c.name, c.id] } %>
    </div>
    <div class="line line-dashed b-b line-lg pull-in"></div>
      <%= f.input :name, label: "表头名" %>
    <div class="line line-dashed b-b line-lg pull-in"></div>
    <%= f.input :fieldname, label: "字段名" %>
    <div class="line line-dashed b-b line-lg pull-in"></div>
    <label class="col-sm-2 control-label file optional">字段类型</label>
    <div class="col-sm-offset-2">
    <%= f.select :fieldtype, Settings.info_type.fieldtype.map { |x| x[0]}%>
    </div>
    <div class="line line-dashed b-b line-lg pull-in"></div>
    <label class="col-sm-2 control-label file optional">输出类型</label>
    <div class="col-sm-offset-2">
    <%= f.select :optype, Settings.info_type.optype.map { |x| x[0]} %>
    </div>
    <div class="line line-dashed b-b line-lg pull-in"></div>
    <%= f.input :validation_rule, label: "验证规则" %>
    <div class="line line-dashed b-b line-lg pull-in"></div>
    <%= f.input :show, as: :boolean, html: true,  label: "是否显示到表格" %>
    <div class="line line-dashed b-b line-lg pull-in"></div>
    <div class="col-sm-10 col-sm-offset-2">
      <%= f.button :submit, "提 交", class: "btn btn-primary" %>
      <%= link_to "返 回", info_types_path, class: "btn btn-default" %>
  </div>
<% end %>
