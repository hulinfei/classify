<div class="panel panel-default">
<div class="panel-heading font-bold">
  查看站点
</div>
<div class="panel-body">

<%= simple_form_for([@site], html: { multipart: true, class: "form-horizontal" }) do |f| %>
  <%= f.input :name, label: "站点名称" %>
  <%= f.input :domain, label: "站点域名" %>
  <%= f.input :weixin_appid, label: "微信APPID" %>
  <%= f.input :weixin_appsecret, label: "微信appsecret" %>
  <%= f.input :weixin_secret_key, label: "微信secret key " %>
  <%= f.input :weixin_token, label: "微信token" %>
<% end %>
<div class="line line-dashed b-b line-lg pull-in"></div>
<div class="col-sm-10 col-sm-offset-2">
<%= link_to "修改", edit_site_path(@site), class: "btn btn-success btn-xs" %>
<%= link_to "返回", sites_path,  class: "btn btn-success btn-xs" %>
</div>
 </div>
</div>
</div>
