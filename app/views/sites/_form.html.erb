<%= simple_form_for(@site) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :weixin_appid %>
    <%= f.input :weixin_appsecret %>
    <%= f.input :weixin_secret_key %>
    <%= f.input :weixin_token %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
