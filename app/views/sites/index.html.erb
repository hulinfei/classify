<p id="notice"><%= notice %></p>

<h1>Sites</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Weixin appid</th>
      <th>Weixin appsecret</th>
      <th>Weixin secret key</th>
      <th>Weixin token</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.name %></td>
        <td><%= site.weixin_appid %></td>
        <td><%= site.weixin_appsecret %></td>
        <td><%= site.weixin_secret_key %></td>
        <td><%= site.weixin_token %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

