<div class="panel panel-default">
  <div class="panel-heading">
    站点列表
    <div class="pull-right">
      <%= link_to "新建站点", new_site_path, class: "btn btn-primary btn-xs" %>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table table-striped b-t b-light">
      <thead>
        <tr>
          <th>站点名称</th>
          <th>微信APPID</th>
          <th style="width:120px;">创建时间</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <%= render(@sites) %>
      </tbody>
    </table>
  </div>
  <footer class="panel-footer">
    <%= render partial: "shared/admin/paginate", locals: { object: @site } %>
  </footer>
</div>
